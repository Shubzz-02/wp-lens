{
  "name": "wp-lens",
  "version": "1.0.0",
  "description": "Modern WordPress Security Scanner Report Viewer",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run watch-css\" \"npm run serve\"",
    "serve": "node server.js",
    "build-css": "tailwindcss -i ./src/input.css -o ./public/styles.css --watch",
    "watch-css": "tailwindcss -i ./src/input.css -o ./public/styles.css --watch",
    "build": "tailwindcss -i ./src/input.css -o ./public/styles.css --minify",
    "start": "node server.js",
    "lint": "eslint . --ext .js --ignore-path .eslintignore",
    "lint:fix": "eslint . --ext .js --ignore-path .eslintignore --fix",
    "lint:check": "eslint . --ext .js --ignore-path .eslintignore --max-warnings 0",
    "format": "prettier --write \"**/*.{js,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,css,html}\"",
    "code-quality": "npm run lint:check && npm run format:check",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "wordpress",
    "security",
    "wpscan",
    "vulnerability",
    "analysis"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.31",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.3.5"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  }
}
